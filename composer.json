{
  "name": "sycho/flarum-asirem",
  "description": "The weird Flarum theme made with potatoes as fuel.",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.0.0",
    "sycho/flarum-uikit": "^0.1.0",
    "afrux/flarum-theme-base": "^0.1.0",
    "knplabs/packagist-api": "^1.0.0"
  },
  "require-dev": {
    "flarum/testing": "^1.0.0",
    "sycho/flarum-uikit": "*@dev",
    "afrux/flarum-theme-base": "*@dev"
  },
  "authors": [
    {
      "name": "Sami Ilyes Mazouz",
      "email": "ilyasmazouz@gmail.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "SychO\\Asirem\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SychO\\Asirem\\Tests\\": "tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.1.x-dev"
    },
    "flarum-extension": {
      "title": "Asirem",
      "category": "theme",
      "optional-dependencies": [
          "flarum/tags",
          "flarum/approval",
          "sycho/flarum-advanced-extension-categories"
        ],
      "icon": {
        "image": "icon.svg"
      }
    },
    "flagrow": {
      "discuss": ""
    }
  },
  "scripts": {
    "test": [
      "@test:unit",
      "@test:integration"
    ],
    "test:unit": "phpunit -c tests/phpunit.unit.xml",
    "test:integration": "phpunit -c tests/phpunit.integration.xml",
    "test:setup": "@php tests/integration/setup.php"
  },
  "scripts-descriptions": {
    "test": "Runs all tests.",
    "test:unit": "Runs all unit tests.",
    "test:integration": "Runs all integration tests.",
    "test:setup": "Sets up a database for use with integration tests. Execute this only once."
  }
}
